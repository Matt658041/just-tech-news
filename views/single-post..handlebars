<article class="post">
    <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}})</span>

    </div>
    <div class="meta">
        {{post.vote_count}} point(s) by {{post.user.name}} on 
        {{post.created._at}}
        |
        <a href="/post/{{post.id}}">{{post.comment.length}} comment(s)</a>
    </div>

</article>